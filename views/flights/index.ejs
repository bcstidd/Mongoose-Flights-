<%- include('../partials/header') %>
<a href="/flights/new">Add New Flight</a>

<h2><i>Mongo Airport</i></h2>
<table>
    <thead>
    <tr>
    <th>Airline</th>
    <th>Airport</th>
    <th>destinations</th>
    <th>flightNo</th>
    <th>departs</th>
    </tr>
  </thead>

  <tbody>
    <% flights.forEach((f) => { %>
      <tr>
        <div id="rows"><td><%= f.airline %></td> 
         <td><%= f.airport %></td> 
        <!-- <td><%= f.destinations%></td> -->
         <td><%= f.flightNo%></td> 
        <td><%= f.departs%></td> 
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td> 
      </div>
        
      </tr>
   
   <% }) %>
  </tbody>

</table>

<%- include('../partials/header') %>